<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentEx">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Razopay TestApp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Payment"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹- 899"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  9998042277"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_person_24">

        </TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:id="@+id/cardImage"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="150dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/username"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="XXXX-XXXX-XXXX"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="00/00"
                android:textColor="@color/black"
                android:layout_marginStart="109dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Holder's name"
                android:layout_marginTop="100dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:layout_marginTop="100dp"
                android:textSize="20sp"
                android:layout_marginStart="100dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:padding="8dp"
                android:hint="Holder Name"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:padding="8dp"
                android:hint="XXX"
                android:textColor="@color/black"
                android:layout_marginStart="150dp"/>

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="Remember Card"
            android:layout_marginStart="10dp"
            />


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/paynow"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue"
        android:onClick="login"
        android:text="PAY NOW"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">



<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Cash On Delivery"-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="40dp"-->


        <Button
            android:id="@+id/cashon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue"
            android:onClick="login"
            android:text="Cash On Delivey"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />











    </androidx.cardview.widget.CardView>


</LinearLayout>