<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ball.Ball2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:id="@+id/cardImage"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="335dp"
            android:layout_height="315dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/cball4" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Rubber Green Tennis Cricket Ball | Pack Of 3 Balls"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹- 90"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginEnd="160dp"
            android:textColor="@color/black"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this item"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text=" -->Material: Popular Willow Cricket Bat Meant For Playing By 11 - 18+ Years and Above Adult Men and Women\n -->Playing Level: Beginner, Training, Advanced\n -->Lightweight Design And Full Size All Age Group Play This Bat\n -->Bat Grade: Grade A++, Suitable for soft ball Cricket you can use ( Tennis Ball, Leather Ball, wind Ball and cosco ball, Rubber Ball)\n --> TOSKA Cricket Bat Full Size Popular Willow Kookaburra Cricket Bat for Tennis Ball | Rubber Ball | Plastic Ball (Men|Women) (Black) "
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="BUY NOW"
        android:id="@+id/BUYNOW"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_b"
        app:cornerRadius = "20dp"
        android:onClick="login"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ADD TO CART"
        android:id="@+id/ADDTOCART"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_b"
        app:cornerRadius = "20dp"
        android:onClick="login"/>


</LinearLayout>